{

  "manifest_version": 2,
  "name": "InnoMetrics",
  "description": "Metrics",
  "version": "1.0",
  "homepage_url": "https://github.com/klakpin/firefoxAddon",
  "icons": {
    "48": "icons/message-48.png"
  },


  "permissions": ["storage"],

  "background": {
    "scripts": ["background-script.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://mdn.github.io/webextensions-examples/content-script-page-script-messaging.html"],
      "js": ["content-script.js"]
    },
    {
      "matches": ["*://*.google.*/*"],
      "js": ["googleSearchHandler.js"]
    }
  ]

}